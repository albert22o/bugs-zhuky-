<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки игры"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Скорость игры -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Скорость игры"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5" />

        <TextView
            android:id="@+id/textSpeedValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Средняя (5)"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Максимальное количество тараканов -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Макс. количество тараканов"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarMaxCockroaches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="10" />

        <TextView
            android:id="@+id/textMaxCockroachesValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 тараканов"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Интервал появления бонусов -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Интервал появления бонусов"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarBonusInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="15" />

        <TextView
            android:id="@+id/textBonusIntervalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 секунд"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Длительность раунда -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Длительность раунда"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarRoundDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="300"
            android:progress="120" />

        <TextView
            android:id="@+id/textRoundDurationValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 минуты"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Кнопка сохранения -->
        <Button
            android:id="@+id/buttonSaveSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить настройки"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>